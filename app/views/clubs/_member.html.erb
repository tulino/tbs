<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="col-lg-9">
        <div >
          <h6 class="description">Topluluk Üyeleri
            <% if current_user.present? && current_user.admin? %>
               <%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_member_list_club_period_path(@club_period.id), :class => 'btn btn-default pull-right' %>
               <%= link_to '<i class="fa fa-file-excel-o"></i>'.html_safe, edit_member_list_club_period_path( @club_period.id, format: "xlsx"), :class => 'btn btn-default pull-right' %>
           <%end%>
          </h6>
          <br/>
          <table class="table table-hover" id="club_users">
            <thead>
              <tr>
                <th></th>
                <th></th>
                <th>Adı Soyadı</th>
                <th>Rolü</th>
              </tr>
            </thead>
            <tbody>
              <% @club.all_members.each do |role| %>
                <tr>
                  <td></td>
                  <td class="center"><%= avatar_or_not?(role.user, :member_list, '35x35') %></td>
                  <td class="center">
                    <%= profile_or_not?(role.user) %>
                  </td>
                  <td class="center"><%= role.role_type.name %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
